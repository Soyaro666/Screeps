var taskRespawn = {
	
	 /** @param {Role} assign **/
    run: function(assign, energy) {
		var newName = assign + Game.time;
        var spawning = Game.spawns['Spawn1'].spawnCreep([WORK,WORK,CARRY,WORK,CARRY,MOVE,ATTACK,MOVE], newName, {memory: {role: assign}});
		if (spawning < -4 ) {
			spawning = Game.spawns['Spawn1'].spawnCreep([WORK,WORK,CARRY,CARRY,MOVE,ATTACK,MOVE], newName, {memory: {role: assign}});
			if (spawning < -4 ) {
				spawning = Game.spawns['Spawn1'].spawnCreep([WORK,WORK,CARRY,MOVE,ATTACK,MOVE], newName, {memory: {role: assign}});
				if (spawning < -4 ) {
					spawning = Game.spawns['Spawn1'].spawnCreep([WORK,CARRY,MOVE,ATTACK,MOVE], newName, {memory: {role: assign}});
					if (spawning < -4 ) {
						spawning = Game.spawns['Spawn1'].spawnCreep([WORK,CARRY,ATTACK,MOVE], newName, {memory: {role: assign}});
					}
				}
			}
		}
		if (spawning == 0 ) {
			console.log('Spawning new Creep: ' + newName);
		}
	}
};

module.exports = taskRespawn;